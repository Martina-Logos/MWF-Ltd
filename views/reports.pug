link(rel="stylesheet", href="/css/report.css")
.container
  //  Sidebar 
  .sidebar
    .logo
      h2 Mayondo Wood & Furniture Ltd
    ul.nav-links
      li.active
        a(href="/manager")
          i.fas.fa-home
          |  Dashboard
      li
        a(href="/stock")
          i.fas.fa-boxes
          |  Record Stock
      li
        a(href="/orderStock")
          i.fas.fa-truck
          |  Order Stock
      li
        a(href="/user")
          i.fas.fa-users
          |  Users
      li
        a(href="/reports")
          i.fas.fa-chart-bar
          |  Reports
  //  Main Content 
  .main-content
    //  Header 
    .header
      h3 Reports
      .user-info
        div
          h3 Tee Mwangi
          p Manager
        img(src="/imgs/Beauty.png", alt="User")
    //  Main Content 
    .main-content
      //  Page Header 
      .page-header
        h1.page-title
          i.fas.fa-chart-bar
          |  Reports & Analytics
        .header-actions
          button.btn.btn-outline-primary
            i.fas.fa-file-export
            |  Export

          button.btn.btn-primary
            i.fas.fa-print
            |  Print Report

      //  Report Controls 
      .report-controls
        .control-row
          div
            label.form-label Report Type
            select.form-select#reportType
              option(value="sales") Sales Report
              option(value="inventory") Stock Report
              option(value="customer") Customer Report
          div
            label.form-label Date Range
            select.form-select#dateRange
              option(value="today") Today
              option(value="week") This Week
              option(value="month", selected) This Month
              option(value="quarter") This Quarter
              option(value="year") This Year
              option(value="custom") Custom Range
          div
            label.form-label Product Category
            select.form-select#productCategory
              option(value="all") All Products
              option(value="wood") Wood Products
              option(value="furniture") Furniture
              option(value="timber") Timber
          div(style="display: flex; align-items: flex-end;")
            button.btn.btn-primary.w-100#generateReport
              i.fas.fa-sync-alt
              |  Generate Report

      //  Stats Cards 
      .stats-container
        .stat-card
          .stat-icon.icon-revenue
            i.fas.fa-dollar-sign
          .stat-content
            h3 shs24,560
            p Total Revenue
        .stat-card
          .stat-icon.icon-orders
            i.fas.fa-shopping-cart
          .stat-content
            h3 128
            p Total Orders
        .stat-card
          .stat-icon.icon-inventory
            i.fas.fa-boxes
          .stat-content
            h3 356
            p Items in Stock
        .stat-card
          .stat-icon.icon-transport
            i.fas.fa-truck
          .stat-content
            h3 shs1,228
            p Transport Fees
      //  Table Section 
      .table-card
        .table-header
          h3.table-title Recent Sales
          .table-actions
            button.btn.btn-sm.btn-outline-primary
              i.fas.fa-filter
              |  Filter

            button.btn.btn-sm.btn-outline-primary
              i.fas.fa-download
              |  Export

        .table-responsive
          table.table
            thead
              tr
                th Order ID
                th Date
                th Customer
                th Product
                th Amount
                th Status
                th Actions
            tbody
              tr
                td #ORD-001
                td Oct 12, 2023
                td BuildMax Constructions
                td Timber (50 units)
                td shs2,500.00
                td
                  span.badge.badge-success Completed
                td
                  button.btn.btn-sm.btn-outline-primary View
              tr
                td #ORD-002
                td Oct 11, 2023
                td Home Comfort Furniture
                td Office Chairs (10 units)
                td shs1,200.00
                td
                  span.badge.badge-success Completed
                td
                  button.btn.btn-sm.btn-outline-primary View
              tr
                td #ORD-003
                td Oct 10, 2023
                td Prime Builders Ltd
                td Poles (30 units)
                td shs900.00
                td
                  span.badge.badge-warning Processing
                td
                  button.btn.btn-sm.btn-outline-primary View
              tr
                td #ORD-004
                td Oct 09, 2023
                td WoodWorks Inc
                td Hardwood (40 units)
                td shs3,200.00
                td
                  span.badge.badge-success Completed
                td
                  button.btn.btn-sm.btn-outline-primary View
              tr
                td #ORD-005
                td Oct 08, 2023
                td City Furniture
                td Dining Tables (5 units)
                td shs2,500.00
                td
                  span.badge.badge-danger Pending Delivery
                td
                  button.btn.btn-sm.btn-outline-primary View
