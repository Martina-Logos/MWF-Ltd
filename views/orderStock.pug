meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title MWF Ltd - Order Stock
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
link(rel="stylesheet", href="/css/orderStock.css")
.container 
  //  Sidebar 
  .sidebar
    .logo
    h2 Mayondo Wood & Furniture Ltd
    ul.nav-links
        li
            a(href="/manager")
                i.fas.fa-home
                |  Dashboard
        li
            a(href="/orderStock")
                i.fas.fa-boxes
                |  Order Stock
        li.active
            a(href="/orderList")
                i.fas.fa-truck-loading
                |  Order List
        li
            a(href="/user")
                i.fas.fa-users
                |  Users
  //  Main Content 
  .main-content
    //  Header 
    .header
      h1 Order Stock 
      .user-info
        div
          h3 Tee Mwangi
          p Manager
        img(src="/imgs/Beauty.png", alt="User")            
    //  Form Container 
    .form-container
      .form-header
        h2 Create Purchase Order
        p Order new stock from your suppliers
      form#orderForm((action="/orderStock", method="post", ))
        //  Supplier Information Section 
        .form-section
          h3
            i.fas.fa-truck
            |  Supplier Information
          .form-row
            .form-group
              label.required(for="supplier") Select Supplier
              select#supplier(name="supplier", type="text" required)
                option(value) Select a Supplier
                option(value="1") Clement Suppliers
                option(value="2") Premium Woods Ltd
                option(value="3") Forest Products Co.
                option(value="4") Deno Importers
                option(value="5") Tendo Furniture Inc.
            .form-group
              label.required(for="orderDate") Order Date
              input#orderDate(type="date", name="orderDate", required)
          .form-row
            .form-group
              label(for="expectedDate") Expected Delivery Date
              input#expectedDate(type="date", name="expectedDate")
            .form-group
              label.required(for="paymentTerms") Payment Terms
              select#paymentTerms(name="paymentTerms", required)
                option(value) Select Terms
                option(value="net15") 15 Days
                option(value="net30", selected) 30 Days
                option(value="cod") Cash on Delivery
                option(value="prepaid") Prepaid
          //  Supplier Details (displayed when a supplier is selected) 
          .supplier-info#supplierDetails(style="display: none;")
            h4 Supplier Details
            .supplier-details
              .supplier-detail
                label Contact Person
                span#supplierContact -
              .supplier-detail
                label Phone Number
                span#supplierPhone -
              .supplier-detail
                label Email Address
                span#supplierEmail -
              .supplier-detail
                label Address
                span#supplierAddress -
        //  Order Items Section 
        .form-section
          h3
            i.fas.fa-box
            |  Order Items
          table.order-items
            thead
              tr
                th(width="40%") Product
                th(width="15%") Quantity
                th(width="15%") Unit Cost (shs)
                th(width="20%") Total (shs)
                th(width="10%") Actions
            tbody#itemsTableBody
              tr
                td
                  select.product-select(name="product[]", required)
                    option(value) Select Product
                    option(value="1") Storage cabins
                    option(value="2") Ebony Planks
                    option(value="3") Pine Logs
                    option(value="4") Plywood
                    option(value="5") Cedar Beams
                    option(value="6") Poles
                    option(value="7") Dining tables
                    option(value="8") Cupboards
                    option(value="9") Beds
                    option(value="10") Book shelves
                td
                  input(type="number", name="quantity[]", min="1", value="1", required)
                td
                  input(type="number", name="cost[]", step="0.01", min="0", value="0.00", required)
                td shs0.00
                td.item-actions
                  button.btn-remove(type="button")
                    i.fas.fa-trash
          button#addItemBtn.btn.btn-outline(type="button", style="margin-top: 15px;")
            i.fas.fa-plus
            |  Add Item

        //  Shipping Information 
        .form-section
          h3
            i.fas.fa-shipping-fast
            |  Transport Information
          .form-row
            .form-group
              label(for="transportMethod") Transport Method
              select#transportMethod(name="transportMethod")
                option(value) Select Method
                option(value="delivery", selected) Supplier Delivery
                option(value="courier") Courier Service
                option(value="freight") Freight Service
            .form-group
              label(for="deliveryCost") Delivery Cost (shs)
              input#deliveryCost(type="number", name="deliveryCost", step="0.01", min="0", value="0.00")
        //  Summary Section 
        .order-summary
          .summary-row
            span Subtotal:
            span shs0.00
          .summary-row
            span Delivery Cost:
            span#deliveryDisplay shs0.00
          .summary-row.total
            span Order Total:
            span#orderTotal shs0.00
        //  Form Actions 
        .form-actions
          button.btn.btn-outline(type="button")
            i.fas.fa-times
            |  Cancel

          button.btn.btn-success(type="submit")
            i.fas.fa-paper-plane
            |  Submit Order

script(src="/javascript/orderStock.js")