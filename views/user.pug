    //  Add User Tab 
    .tab-content#add-user
      .form-container
        .form-header
          h2 Add New User
          p Create a new user account for system access
        form#userForm
          //  Personal Information Section 
          .form-section
            h3
              i.fas.fa-user
              |  Personal Information
            .form-row
              .form-group
                label.required(for="firstName") First Name
                input#firstName(type="text", name="firstName", required, placeholder="e.g., John")
              .form-group
                label.required(for="lastName") Last Name
                input#lastName(type="text", name="lastName", required, placeholder="e.g., Doe")
            .form-row
              .form-group
                label.required(for="email") Email Address
                input#email(type="email", name="email", required, placeholder="e.g., johndoe@mwf.com")
              .form-group
                label(for="phone") Phone Number
                input#phone(type="tel", name="phone", placeholder="e.g., +1 (555) 123-4567")
          //  Account Information Section 
          .form-section
            h3
              i.fas.fa-key
              |  Account Information
            .form-row
              .form-group
                label.required(for="username") Username
                input#username(type="text", name="username", required, placeholder="e.g., johndoe")
                p.form-hint Will be used for login
              .form-group
                label.required(for="password") Password
                input#password(type="password", name="password", required, placeholder="Enter a strong password")
                p.form-hint Minimum 8 characters with letters and numbers
            .form-row
              .form-group
                label.required(for="role") User Role
                select#role(name="role", required)
                  option(value) Select Role
                  option(value="manager") Manager
                  option(value="attendant") Attendant
                p.form-hint Managers have full access, attendants have limited access
              .form-group
                label.required(for="status") Account Status
                select#status(name="status", required)
                  option(value="active", selected) Active
                  option(value="inactive") Inactive
          //  Permissions Section 
          .form-section
            h3
              i.fas.fa-shield-alt
              |  Permissions
            .form-group
              label System Access
              div(style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 10px; margin-top: 10px;")
                div
                  input#inventoryAccess(type="checkbox", name="inventoryAccess", checked)
                  label(for="inventoryAccess") Inventory Management
                div
                  input#salesAccess(type="checkbox", name="salesAccess", checked)
                  label(for="salesAccess") Sales & Invoicing
                div
                  input#reportsAccess(type="checkbox", name="reportsAccess")
                  label(for="reportsAccess") Reports
                div
                  input#userManagementAccess(type="checkbox", name="userManagementAccess")
                  label(for="userManagementAccess") User Management
          //  Form Actions 
          .form-actions
            button.btn.btn-outline#resetForm(type="button")
              i.fas.fa-times
              |  Cancel

            button.btn.btn-success(type="submit")
              i.fas.fa-user-plus
              |  Create User

