meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title MWF Ltd - Stock Management
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
link(rel="stylesheet", href="/css/stockList.css")
.container
  //  Sidebar 
  .sidebar
    .logo
      h2 MWF Ltd Manager
    ul.nav-links
      li
        a(href="dashboard.html")
          i.fas.fa-home
          |  Dashboard
      li.active
        a(href="#")
          i.fas.fa-boxes
          |  Stock Management
      li
        a(href="sales-form.html")
          i.fas.fa-cash-register
          |  Point of Sale
      li
        a(href="invoices.html")
          i.fas.fa-file-invoice-dollar
          |  Invoices
      li
        a(href="orders.html")
          i.fas.fa-truck-loading
          |  Order Stock
      li
        a(href="customers.html")
          i.fas.fa-users
          |  Customers
      li
        a(href="#")
          i.fas.fa-chart-bar
          |  Reports
  //  Main Content 
  .main-content
    //  Header 
    .header
      h1 Stock Management
      .user-info
        div
          h3 John Manager
          p Manager
        img(src="https://xsgames.co/randomusers/avatar.php?g=male", alt="User")
    //  Stock Summary 
    .stock-summary
      .summary-card.card-primary
        i.fas.fa-boxes
        h3 1,248
        p Total Products
      .summary-card.card-success
        i.fas.fa-check-circle
        h3 1,042
        p In Stock
      .summary-card.card-warning
        i.fas.fa-exclamation-triangle
        h3 38
        p Low Stock
      .summary-card.card-danger
        i.fas.fa-times-circle
        h3 12
        p Out of Stock
    //  Controls Section 
    .controls
      .controls-header
        h2 Stock Inventory
        div
          button.btn.btn-primary
            i.fas.fa-plus
            |  Add New Product

          button.btn.btn-success
            i.fas.fa-file-export
            |  Export

      .filters
        .search-box
          input(type="text", placeholder="Search products by name, code, or supplier...")
          button
            i.fas.fa-search
            |  Search
        .filter-group
          label(for="categoryFilter") Product Type
          select#categoryFilter
            option(value) All Types
            option(value="timber") Timber
            option(value="poles") Poles
            option(value="hardwood") Hardwood
            option(value="softwood") Softwood
            option(value="furniture") Furniture
        .filter-group
          label(for="statusFilter") Stock Status
          select#statusFilter
            option(value) All Status
            option(value="in-stock") In Stock
            option(value="low-stock") Low Stock
            option(value="out-of-stock") Out of Stock
        .filter-group
          label(for="qualityFilter") Quality
          select#qualityFilter
            option(value) All Quality
            option(value="premium") Premium
            option(value="standard") Standard
            option(value="economy") Economy
    //  Stock Table 
    .stock-table-container
      table.stock-table
        thead
          tr
            th Product ID
            th Product Name
            th Type
            th Supplier
            th Cost Price
            th Selling Price
            th Stock Level
            th Status
            th Quality
            th Last Updated
            th Actions
        tbody#stockTableBody
          //  Sample data will be populated by JavaScript 
      //  Pagination 
      .pagination
        button.active 1
        button 2
        button 3
        button 4
        button 5
script(src="/javascript/stockList.js")