meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title MWF Ltd - Sales Form
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
link(rel="stylesheet", href="/css/sales.css")
.container
  //  Sidebar 
  .sidebar
    .logo
      h2 Mayondo Wood & Furniture Ltd
    ul.nav-links
      li
        a(href="salesAgent.html")
          i.fas.fa-home
          |  Dashboard
      li.active
        a(href="#")
          i.fas.fa-cash-register
          |  Record Sale
      li
        a(href="invoice.html")
          i.fas.fa-file-invoice-dollar
          |  Invoices
      li
        a(href="receipt.html")
          i.fas.fa-boxes
          |  Receipts
      li
        a(href="#")
          i.fas.fa-users
          |  Customers
      li
        a(href="reports.html")
          i.fas.fa-chart-bar
          |  Report
  //  Main Content 
  .main-content
    //  Header 
    .header
      h1 Point of Sale
      .user-info
        div
          h3 Mugerwa Rollins
          p Sales Attendant
        img(src="/imgs/salesAgent.jpg", alt="User")
    //  Form Container 
    .form-container
      .form-header
        h2 Process Sale
        p Record a new sale transaction
      form#salesForm(action="/sales", method="post")
        //  Customer Information Section 
        .form-section
          h3
            i.fas.fa-user
            |  Customer Information
          .customer-search
            input(type="text", placeholder="Search customer by name, phone, or email...")
            button(type="button")
              i.fas.fa-search
              |  Search
          .form-row
            .form-group
              label.required(for="customerName") Customer Name
              input#customerName(type="text", name="customerName", required, placeholder="e.g., BuildIT Constructions")
            .form-group
              label(for="customerContact") Contact Person
              input#customerContact(type="text", name="customerContact", placeholder="Name of contact person")
          .form-row
            .form-group
              label(for="customerAddress") Address
              input#customerAddress(type="text", name="customerAddress", placeholder="Customer\'s address")
            .form-group
              label(for="customerPhone") Phone Number
              input#customerPhone(type="tel", name="customerPhone", placeholder="Customer\'s phone number")
        //  Sale Items Section 
        .form-section
          h3
            i.fas.fa-box
            |  Sale Items
          table.sales-items
            thead
              tr
                th(width="40%") Product
                th(width="15%") Quantity
                th(width="15%") Unit Price ($)
                th(width="20%") Total ($)
                th(width="10%") Actions
            tbody#itemsTableBody
              tr
                td
                  select.product-select(name="product[]", required)
                    option(value) Select Product
                    option(value="1") Mahogany Timber Plank
                    option(value="2") Oak Wood Beam
                    option(value="3") Teak Hardwood
                    option(value="4") Office Desk
                    option(value="5") Dining Table
                td
                  input(type="number", name="quantity[]", min="1", value="1", required)
                td
                  input(type="number", name="price[]", step="0.01", min="0", value="0.00", required)
                td $0.00
                td.item-actions
                  button.btn-remove(type="button")
                    i.fas.fa-trash
          button#addItemBtn.btn.btn-outline(type="button", style="margin-top: 15px;")
            i.fas.fa-plus
            |  Add Item

        //  Payment & Delivery Section 
        .form-section
          h3
            i.fas.fa-money-bill-wave
            |  Payment & Delivery
          .form-row
            .form-group
              label.required(for="paymentMethod") Payment Method
              select#paymentMethod(name="paymentMethod", required)
                option(value) Select Method
                option(value="cash") Cash
                option(value="cheque") Cheque
                option(value="bank_transfer") Bank Transfer
                option(value="bank_overdraft") Bank Overdraft
            .form-group
              label.required(for="salesAgent") Sales Agent
              input#salesAgent(type="text", name="salesAgent", required, value="Sarah Johnson", readonly)
          .transport-fee
            input#provideTransport(type="checkbox", name="provideTransport")
            label(for="provideTransport")
              strong MWF will provide transport (adds 5% transport fee)
        //  Summary Section 
        .sales-summary
          .summary-row
            span Subtotal:
            span $0.00
          .summary-row#transportRow(style="display: none;")
            span Transport Fee (5%):
            span $0.00
          .summary-row.total
            span Total Amount:
            span#totalAmount $0.00
        //  Form Actions 
        .form-actions
          button.btn.btn-outline(type="button")
            i.fas.fa-times
            |  Cancel

          button.btn.btn-primary(type="button")
            i.fas.fa-receipt
            |  Preview Receipt

          button.btn.btn-success(type="submit")
            i.fas.fa-check
            |  Complete Sale

script(src="/javascript/sales.js")