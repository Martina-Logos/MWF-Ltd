meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title User Login
link(rel="stylesheet", href="/css/login.css")

.login-container
  .login-header
    h1 USER LOGIN
    p Enter your credentials to access your account
  // Flash popup (only shows if there's an error_msg)
  if error_msg
    script.
      alert("#{error_msg}");
  form#loginForm(action="/login" method="post")
    .form-group
      label(for="email") Email
      input#username.form-control(name="email" type="text", placeholder="Enter your email", required)
    .form-group
      label(for="password") Password
      input#password.form-control(name="password" type="password", placeholder="Enter your password", required)
    button.login-btn(type="submit") LOGIN
