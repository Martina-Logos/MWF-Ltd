meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title MWF Ltd - Generate Receipt
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
link(rel="stylesheet", href="/public/css/receipt.css")
.container
  //  Sidebar 
  .sidebar
    .logo
      h2 Mayondo Wood & Furniture Ltd
    ul.nav-links
      li
        a(href="/salesAgent")
          i.fas.fa-home
          |  Dashboard
      li
        a(href="/sales")
          i.fas.fa-cash-register
          |  Record Sale
      li.active
        a(href="/receipt")
          i.fas.fa-receipt
          |  Invoices
      li
        a(href="/invoice")
          i.fas.fa-file-invoice-dollar
          |  Receipt
  //  Main Content 
  .main-content
    //  Header 
    .header
      h1 Generate Receipt
      .user-info
        div
          h3 Mugerwa Rollins
          p Sales Attendant
        img(src="/imgs/salesAgent.jpg", alt="User")
    //  Receipt Container 
    .receipt-container
      .receipt-header
        h2 Sales Receipt
        p Official proof of purchase
      //  Company Information 
      .company-info
        h3 Mayondo Wood and Furniture (MWF) Ltd
        p 123 Timber Avenue, Forestville
        p Phone: +256 755123-456 | Email: info@mwf.com
        p VAT Number: VAT-123456789
      //  Receipt Details 
      .receipt-details
        div
          .detail-section
            h4 Receipt Information
            .detail-row
              span.detail-label Receipt Number:
              span.detail-value#receiptNumber RC-2023-0085
            .detail-row
              span.detail-label Date Issued:
              span.detail-value#receiptDate November 15, 2023
            .detail-row
              span.detail-label Time:
              span.detail-value#receiptTime 10:24 AM
            .detail-row
              span.detail-label Sales Agent:
              span.detail-value#salesAgent Sarah Johnson
        div
          .detail-section
            h4 Customer Information
            .detail-row
              span.detail-label Customer Name:
              span.detail-value#customerName BuildIT Constructions
            .detail-row
              span.detail-label Contact Person:
              span.detail-value#customerContact Robert Johnson
            .detail-row
              span.detail-label Phone:
              span.detail-value#customerPhone +256 703 987654
            .detail-row
              span.detail-label Address:
              span.detail-value#customerAddress 123 Construction Ave, Buildington
      //  Items Table 
      table.receipt-items
        thead
          tr
            th(width="40%") Product Description
            th(width="15%") Quantity
            th(width="15%") Unit Price (shs)
            th(width="15%") Discount
            th(width="15%") Total (shs)
        tbody#receiptItems
          tr
            td Mahogany Timber Plank (Premium Grade)
            td 20
            td shs125.00
            td shs0.00
            td shs2,500.00
          tr
            td Oak Wood Beam (4x4x8 ft)
            td 10
            td shs85.50
            td shs0.00
            td shs855.00
          tr
            td Teak Hardwood Planks
            td 15
            td shs95.00
            td shs142.50
            td shs1,282.50
      //  Summary Section 
      .receipt-summary
        .summary-row
          span Subtotal:
          span#subtotalAmount shs4,637.50
        .summary-row
          span Transport Fee (5%):
          span#transportFee shs231.88
        .summary-row
          span Tax (VAT 10%):
          span#taxAmount shs463.75
        .summary-row.total
          span Total Amount:
          span#totalAmount shs5,333.13
      //  Payment Information 
      .detail-section(style="margin-top: 30px;")
        h4 Payment Information
        .detail-row
          span.detail-label Payment Method:
          span.detail-value#paymentMethod Bank Transfer
        .detail-row
          span.detail-label Payment Status:
          span.detail-value#paymentStatus(style="color: var(--success); font-weight: bold;") Paid
        .detail-row
          span.detail-label Transaction Reference:
          span.detail-value#transactionRef TRX-20231115-0085
      //  Terms and Conditions 
      .detail-section(style="margin-top: 30px;")
        h4 Terms & Conditions
        p(style="color: var(--gray); font-size: 14px; line-height: 1.5;").
          
          Goods sold are not returnable unless defective. Warranty claims must be made within 30 days of purchase. Transport fee applies if delivery service is provided by MWF Ltd. Receipt must be presented for any claims.
          
      //  Thank You Message 
      div(style="text-align: center; margin-top: 30px; padding-top: 20px; border-top: 1px solid #eee;")
        h3(style="color: var(--primary);") Thank You for Your Business!
        p(style="color: var(--gray);") We appreciate your trust in MWF Ltd
      //  Actions 
      .receipt-actions
        button.btn.btn-outline(onclick="window.history.back()")
          i.fas.fa-arrow-left
          |  Back to Sales

        button.btn.btn-primary(onclick="printReceipt()")
          i.fas.fa-print
          |  Print Receipt

        button.btn.btn-success(onclick="emailReceipt()")
          i.fas.fa-envelope
          |  Email Receipt

script(src="/javascript/receipts.js")